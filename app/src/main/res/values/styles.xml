<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple500</item>
        <item name="colorPrimaryDark">@color/purple700</item>
        <item name="colorAccent">@color/teal200</item>
    </style>

    <style name="Theme.App.Navigation" parent="Theme.App">
        <item name="android:tint">@color/persian_green</item>
        <item name="itemIconTint">@color/persian_green</item>
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="android:fontFamily">@font/anjoman_medium</item>
        <item name="android:textColor">@color/hit_gray</item>
    </style>

    <style name="Theme.App.Toolbar.Text" parent="Theme.App">
        <item name="fontFamily">@font/anjoman_semi_bold</item>
        <item name="android:fontFamily">@font/anjoman_semi_bold</item>
        <item name="android:textColor">@color/selected_tab_home</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.App.Toolbar.Image" parent="Theme.App">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/ic_hamburger_menu</item>
        <item name="tint">@color/selected_tab_home</item>

    </style>

    <style name="Theme.App.EditText.Login.Input" parent="Theme.App">
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/hit_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@drawable/login_input_selector</item>

    </style>

    <style name="Theme.App.EditText.Login.Button" parent="Theme.App">
        <item name="android:textSize">18sp</item>
        <item name="background">@color/persian_green</item>
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="elevation">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.App.TextView.Body.TabView" parent="Theme.App">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hit_gray</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/anjoman_bold</item>
    </style>

    <style name="Theme.App.TextView.Body.TabView.Selected" parent="Theme.App">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/persian_green</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/anjoman_bold</item>
    </style>


</resources>