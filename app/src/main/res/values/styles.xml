<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/persian_green</item>
        <item name="colorAccent">@color/persian_green</item>
    </style>

    <style name="Theme.App.TransBack" parent="Theme.App">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.App.MainConstraint" parent="Theme.App">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.App.MainConstraint.Login" parent="Theme.App">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.App.Profile.Title" parent="Theme.App">
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="android:fontFamily">@font/anjoman_medium</item>
        <item name="android:textColor">@color/tab_home</item>
        <item name="android:textSize">14sp</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="Theme.App.Profile.Value" parent="Theme.App">
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="android:fontFamily">@font/anjoman_medium</item>
        <item name="android:textColor">@color/selected_tab_home</item>
        <item name="android:textSize">14sp</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="Theme.App.Navigation" parent="Theme.App">
        <item name="android:tint">@color/persian_green</item>
        <item name="itemIconTint">@color/persian_green</item>
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="android:fontFamily">@font/anjoman_medium</item>
        <item name="android:textColor">@color/hit_gray</item>
    </style>

    <style name="Theme.App.Toolbar.Text" parent="Theme.App">
        <item name="fontFamily">@font/anjoman_semi_bold</item>
        <item name="android:fontFamily">@font/anjoman_semi_bold</item>
        <item name="android:textColor">@color/selected_tab_home</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.App.Toolbar.Image" parent="Theme.App">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/ic_hamburger_menu</item>
        <item name="tint">@color/selected_tab_home</item>
    </style>

    <style name="Theme.App.EditText.Report.Price" parent="Theme.App">
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/hit_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hit_gray</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="fontFamily">@font/anjoman_regular</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:inputType">number</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.App.EditText.Search" parent="Theme.App">
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/hit_gray</item>
        <item name="android:textColorHint">@color/hit_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.App.ImageView.Edit" parent="Theme.App">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.App.TextView.Search" parent="Theme.App">
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/hit_gray</item>
        <item name="android:textColorHint">@color/hit_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/login_input_background</item>
    </style>

    <style name="Theme.App.EditText.Login.Input" parent="Theme.App">
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/hit_gray</item>
        <item name="android:textColorHint">@color/hit_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@drawable/login_input_selector</item>

    </style>

    <style name="Theme.App.EditText.Login.Button" parent="Theme.App">
        <item name="android:textSize">18sp</item>
        <item name="background">@color/persian_green</item>
        <item name="fontFamily">@font/anjoman_medium</item>
        <item name="elevation">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.App.TextView.Body.TabView" parent="Theme.App">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/tab_colors</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/anjoman_bold</item>
    </style>

    <style name="Theme.App.TextView.Body.TabView.Selected" parent="Theme.App">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/persian_green</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/anjoman_bold</item>
    </style>


</resources>