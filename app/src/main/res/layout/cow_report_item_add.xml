<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:background="@drawable/black_border_background"
    android:foregroundGravity="center">

    <TextView
        android:id="@+id/report_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anjoman_regular"
        android:padding="4dp"
        android:text="@string/add_report"
        android:textColor="@color/hit_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow"
        style="@style/Theme.App.ImageView.Edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="17dp"
        android:src="@drawable/ic_add_reverse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/report_name"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/hit_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>