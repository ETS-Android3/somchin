<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.App.MainConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.reports.fragments.CowInjuryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/Theme.App.MainConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/anjoman_bold"
                android:text="@string/injury_area"
                android:textColor="@color/selected_tab_home"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cow_som_parts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/info_title">


                <Button
                    android:id="@+id/one_right"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@id/main_som"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/one_left"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/one_left"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@id/main_som"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/one_right" />

                <Button
                    android:id="@+id/two_right"
                    android:layout_width="25dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:background="@android:color/transparent"
                    android:rotation="40"
                    app:layout_constraintBottom_toTopOf="@id/one_left"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/two_left"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/two_left"
                    android:layout_width="25dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:background="@android:color/transparent"
                    android:rotation="140"
                    app:layout_constraintBottom_toTopOf="@id/one_left"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/two_right" />

                <Button
                    android:id="@+id/three_right"

                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="110dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/two_left"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/three_left"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/three_left"

                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="110dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/two_left"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/three_right"
                    app:tint="@android:color/transparent" />

                <Button
                    android:id="@+id/five_right"

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/one_left"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/five_left"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/five_left"

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/one_right"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/five_right" />

                <Button
                    android:id="@+id/four_right"

                    android:layout_width="80dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/five_left"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/four_left"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/four_left"

                    android:layout_width="80dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/five_left"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/four_right" />

                <Button
                    android:id="@+id/six_right"

                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/four_right"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/six_left"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/six_left"

                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/four_left"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/six_right" />

                <Button
                    android:id="@+id/ten"

                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/zero"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="30dp"
                    android:layout_height="140dp"
                    android:layout_margin="15dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@id/one_right"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/eleven"

                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:layout_margin="12dp"
                    android:background="@android:color/transparent"
                    android:rotation="35"
                    app:layout_constraintBottom_toBottomOf="@id/left_som"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="@id/left_som"
                    app:layout_constraintRight_toLeftOf="@id/twelve"
                    app:layout_constraintTop_toTopOf="@id/left_som" />

                <Button
                    android:id="@+id/twelve"

                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:layout_margin="0dp"
                    android:background="@android:color/transparent"
                    android:rotation="35"
                    app:layout_constraintBottom_toBottomOf="@id/left_som"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/eleven"
                    app:layout_constraintRight_toRightOf="@id/left_som"
                    app:layout_constraintTop_toTopOf="@id/left_som" />


                <Button
                    android:id="@+id/seven"

                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:background="@android:color/transparent"

                    android:rotation="25"
                    app:layout_constraintBottom_toBottomOf="@id/right_som"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="@id/right_som"
                    app:layout_constraintRight_toLeftOf="@id/eight" />

                <Button
                    android:id="@+id/eight"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:background="@android:color/transparent"
                    android:rotation="25"
                    app:layout_constraintBottom_toBottomOf="@id/right_som"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/seven"
                    app:layout_constraintRight_toRightOf="@id/right_som" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"

                    app:layout_constraintBottom_toTopOf="@id/eight"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/seven"

                    />

                <ImageView
                    android:id="@+id/main_som"
                    style="@style/Theme.App.ImageView.Edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="250dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_som_main"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/left_som"
                    style="@style/Theme.App.ImageView.Edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_20"
                    app:layout_constraintBottom_toBottomOf="@id/right_som"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/right_som" />

                <ImageView
                    android:id="@+id/right_som"
                    style="@style/Theme.App.ImageView.Edit"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_16"
                    app:layout_constraintLeft_toRightOf="@id/left_som"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/main_som" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/next_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="35dp"
                android:background="@drawable/login_button_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cow_som_parts">

                <TextView
                    android:id="@+id/next_text"
                    style="@style/Theme.App.TransBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anjoman_medium"
                    android:paddingStart="20dp"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/next_icon"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/next_icon"
                    style="@style/Theme.App.ImageView.Edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_front"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/next_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/back_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="35dp"
                android:background="@drawable/back_button_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cow_som_parts">

                <TextView
                    android:id="@+id/back_text"
                    style="@style/Theme.App.TransBack"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anjoman_medium"
                    android:paddingEnd="20dp"
                    android:text="@string/prevois"
                    android:textColor="@color/hit_gray"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/back_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/back_icon"
                    style="@style/Theme.App.ImageView.Edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/back_text"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/hit_gray" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>