<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:elevation="4dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/farm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anjoman_semi_bold"
        android:text="دامداری خرم"
        android:textColor="@color/selected_tab_home"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cow_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/farm_text"
        app:layout_constraintTop_toBottomOf="@id/farm_text" />

    <TextView
        android:id="@+id/cow_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:fontFamily="@font/anjoman_medium"
        android:text="۱۵"
        android:textColor="@color/persian_green"
        app:layout_constraintBottom_toBottomOf="@id/cow_icon"
        app:layout_constraintStart_toEndOf="@id/cow_icon"
        app:layout_constraintTop_toTopOf="@id/cow_icon" />

    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/anjoman_medium"
        android:gravity="center"
        android:text=">"
        android:textColor="@color/persian_green"
        app:layout_constraintBottom_toBottomOf="@id/cow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cow_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>