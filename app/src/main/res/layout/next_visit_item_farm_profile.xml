<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_border_background">

    <ImageView
        android:id="@+id/arrow"
        style="@style/Theme.App.ImageView.Edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/anjoman_bold"
        android:padding="5dp"
        android:src="@drawable/ic_front"
        android:textColor="@color/selected_tab_home"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/cattel_id"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/persian_green" />

    <ImageView
        android:id="@+id/cow_image"
        style="@style/Theme.App.ImageView.Edit"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/calendar_icon"
        style="@style/Theme.App.ImageView.Edit"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@id/date_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/date_text"
        app:tint="@color/persian_green" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anjoman_bold"
        android:textColor="@color/persian_green"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/cattel_id"
        app:layout_constraintTop_toBottomOf="@id/cattel_id"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/cattel_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/anjoman_semi_bold"
        android:gravity="center"
        android:text=" بازدید از دام شماره ۱۲۳"
        android:textAlignment="center"
        android:textColor="@color/selected_tab_home"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/cow_image"
        app:layout_constraintEnd_toStartOf="@id/arrow"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/cow_image"
        app:layout_constraintTop_toTopOf="@id/cow_image"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>