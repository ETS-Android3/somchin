<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.App.MainConstraint"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    android:minHeight="50dp">

    <CheckBox
        android:id="@+id/reason_check"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reason_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anjoman_regular"
        android:textColor="@color/report_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/reason_check"
        app:layout_constraintStart_toEndOf="@id/reason_check"
        app:layout_constraintTop_toTopOf="@id/reason_check" />


</androidx.constraintlayout.widget.ConstraintLayout>